    <div id="content">
        <ul class="nav nav-tabs bg-light">
            <li class="nav-item">
                <a class="nav-link active" style="color:black" href="javascript:;" id="nav_main">首页</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" style="color:black" href="javascript:;" id="nav_blog" onclick="toBlog('{{user}}','{{isadmin}}',1)">博客内容</a>
            </li>


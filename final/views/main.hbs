<link rel="stylesheet" type="text/css" href="/stylesheets/login.css">
<nav class="navbar navbar-expand-md" id="mainNav">
    <a class="navbar-brand" href="#" id="english">Blog</a>
    <a class="navbar-brand" href="#" id="chinese">博客管理系统</a>
    <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <button type="button" id="exit" class="btn btn btn-primary btn-block mt-3" onclick="quit()">退出</button>
